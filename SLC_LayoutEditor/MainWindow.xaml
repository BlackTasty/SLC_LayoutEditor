<Window x:Class="SLC_LayoutEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SLC_LayoutEditor"
        xmlns:ui="clr-namespace:SLC_LayoutEditor.UI"
        xmlns:vm="clr-namespace:SLC_LayoutEditor.ViewModel"
        xmlns:dvm="clr-namespace:SLC_LayoutEditor.ViewModel.DesignTime"
        TextElement.Foreground="{DynamicResource ForegroundColorBrush}"
        Background="{DynamicResource BackgroundColorBrush}"
        mc:Ignorable="d" Closing="Window_Closing"
        Title="{Binding Title}" MinHeight="450" MinWidth="920"
        d:DataContext="{d:DesignInstance {x:Type dvm:MainDesignViewModel}, IsDesignTimeCreatable=True}"
        Icon="Resources/icon.ico">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <DockPanel>
            <DockPanel.Style>
                <Style TargetType="DockPanel">
                    <Setter Property="Effect" Value="{x:Null}"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsDialogOpen}" Value="True">
                            <Setter Property="Effect" Value="{StaticResource DisableBlur}"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DockPanel.Style>
            <DockPanel DockPanel.Dock="Top" Background="{DynamicResource BackgroundDarkBrush}">
                <DockPanel LastChildFill="False" Background="{DynamicResource MenuBackgroundBrush}">
                    <Menu Foreground="{StaticResource ForegroundColorBrush}">
                        <MenuItem Header="File" Height="34">
                            <MenuItem Header="Welcome" Click="OpenWelcomeScreen_Click"/>
                        </MenuItem>
                        <MenuItem Header="System" Height="34">
                            <MenuItem Header="Settings" Click="Settings_Click"/>
                            <Separator Style="{StaticResource MenuSeparatorStyle}"/>
                            <MenuItem Header="Search for updates" Click="SearchUpdates_Click" 
                              IsEnabled="{Binding IsSearching, Converter={StaticResource InverseBooleanConverter}}"/>
                            <MenuItem Header="What's new?" Click="Changelog_Click"/>
                            <MenuItem Header="Roadmap" Click="Roadmap_Click"/>
                        </MenuItem>
                    </Menu>
                    <Border BorderThickness=".75,0" CornerRadius=".75" Margin="16,6"
                        BorderBrush="{DynamicResource SeparatorColorBrush}"
                        Visibility="Collapsed"/>
                    <DockPanel Margin="0,0,12,0" Visibility="Collapsed">
                        <Button Style="{StaticResource IconButton}" Content="{StaticResource Undo}" Margin="4,0" ToolTip="Undo"
                        Click="Undo_Click" IsEnabled="{Binding History.CanUndo}"/>
                        <Button Style="{StaticResource IconButton}" Content="{StaticResource Redo}" Margin="4,0" ToolTip="Redo"
                        Click="Redo_Click" IsEnabled="{Binding History.CanRedo}"/>
                    </DockPanel>
                </DockPanel>
                <DockPanel LastChildFill="False" HorizontalAlignment="Right">
                    <DockPanel Margin="32,0" Visibility="{Binding IsSearching, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Button Content="Download &amp; install" Visibility="{Binding IsUpdateReady, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Click="DownloadAndInstallUpdate_Click" Margin="2"/>
                        <ProgressBar DockPanel.Dock="Bottom" IsIndeterminate="{Binding IsDownloading, Converter={StaticResource InverseBooleanConverter}}"
                                 Value="{Binding DownloadCurrent}" Maximum="{Binding DownloadSize}" 
                                 Visibility="{Binding IsUpdateReady, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                        <TextBlock Text="{Binding UpdateText}" VerticalAlignment="Center" TextAlignment="Right" Margin="4,0"
                                 Visibility="{Binding IsUpdateReady, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                    </DockPanel>
                    <Button Content="Return to editor" Click="ReturnToEditor_Click" FontSize="12"
                        Visibility="{Binding IsViewNotEditor, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </DockPanel>
            </DockPanel>
            <ContentPresenter Content="{Binding Content}"/>
        </DockPanel>
        <Grid Background="{StaticResource BackdropColorBrush}"
              Visibility="{Binding IsDialogOpen, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Border BorderBrush="{DynamicResource ButtonBorderColorBrush}" BorderThickness="2" CornerRadius="8"
                    Background="{StaticResource BackgroundColorBrush}" UseLayoutRounding="True"
                    HorizontalAlignment="Center" VerticalAlignment="Center" Padding="4,4,4,0"
                    Margin="64">
                <ContentPresenter Content="{Binding Dialog}"/>
            </Border>
        </Grid>
    </Grid>
</Window>
