    <Style x:Key="ExpanderLeftHeaderStyle" TargetType="{x:Type controls:RefinedExpanderToggle}" BasedOn="{StaticResource ExpanderDownHeaderStyle}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ToggleButton}">
                    <Border Padding="{TemplateBinding Padding}">
                        <Grid Background="Transparent" SnapsToDevicePixels="False" Margin="4,6,8,12">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="19"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Path x:Name="arrow" Data="{DynamicResource ChevronLeft}" HorizontalAlignment="Center" SnapsToDevicePixels="false" 
                                  Fill="{TemplateBinding Foreground}" StrokeThickness="2" Stretch="Uniform"
                                  VerticalAlignment="Center" Margin="2" RenderTransformOrigin="0.5,0.5">
                                <Path.RenderTransform>
                                    <RotateTransform Angle="0"/>
                                </Path.RenderTransform>
                            </Path>
                            <ContentPresenter HorizontalAlignment="Stretch" Margin="2,16,0,4" RecognizesAccessKey="True" 
                                              SnapsToDevicePixels="True" VerticalAlignment="Top" Grid.Row="1">
