                                                            FocusVisualStyle="{DynamicResource FocusVisual}" FontStyle="{TemplateBinding FontStyle}" 
                                                            FontStretch="{TemplateBinding FontStretch}" FontSize="{TemplateBinding FontSize}" 
                                                            FontFamily="{TemplateBinding FontFamily}" Margin="1"
