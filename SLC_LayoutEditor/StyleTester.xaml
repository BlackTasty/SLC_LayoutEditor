<Window x:Class="SLC_LayoutEditor.StyleTester"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SLC_LayoutEditor"
        mc:Ignorable="d"
        Title="StyleTester" Height="450" Width="800"
        TextElement.Foreground="{DynamicResource ForegroundColorBrush}"
        Background="{DynamicResource BackgroundColorBrush}">
    <Grid>
        <Button Style="{StaticResource SelectButtonStyle}" Margin="48,0" HorizontalAlignment="Left" Width="30" Height="22"
                Content="{StaticResource SelectColumn}"/>
        <Button Style="{StaticResource SelectButtonStyle}" Margin="48,60,48,0" HorizontalAlignment="Left" Width="22" Height="30"
                Content="{StaticResource SelectRow}"/>
        <Button Style="{StaticResource AddRowButtonStyle}"/>
        <Button Style="{StaticResource AddColumnButtonStyle}"/>
        <Button Style="{StaticResource AddRowButtonLargeStyle}" Margin="0,68,0,0"/>
        <Button Style="{StaticResource AddColumnButtonLargeStyle}" Margin="0,68,0,0"/>
        <Button Style="{StaticResource RemoveRowButtonStyle}" Margin="96,0"/>
        <Button Style="{StaticResource RemoveColumnButtonStyle}" Margin="96,0"/>
    </Grid>
</Window>
